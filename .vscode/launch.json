{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Tests in Container",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false,
            "python": "${workspaceFolder}/venv/bin/python"
        },
        {
            "name": "Debug Tests Locally",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}",
                "-v",
                "-s"
            ],
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/venv/bin/python"
        }
    ]
}