direction: down

classes: {
  contributor: {
    style: {
      fill: "#0f172a"
      stroke: "#f59e0b"
      font-color: "#fef3c7"
      border-radius: 12
      font-size: 26
      stroke-width: 2
      shadow: true
    }
  }
  pending: {
    style: {
      fill: "#0f172a"
      stroke: "#38bdf8"
      font-color: "#e0f2fe"
      border-radius: 12
      font-size: 26
      stroke-width: 2
      shadow: true
    }
  }
  auditor: {
    style: {
      fill: "#0f172a"
      stroke: "#a78bfa"
      font-color: "#ede9fe"
      border-radius: 12
      font-size: 26
      stroke-width: 2
      shadow: true
    }
  }
  decision: {
    shape: diamond
    style: {
      fill: "#0f172a"
      stroke: "#a78bfa"
      font-color: "#ede9fe"
      font-size: 24
      stroke-width: 2
      shadow: true
    }
  }
  approved: {
    style: {
      fill: "#052e16"
      stroke: "#22c55e"
      font-color: "#dcfce7"
      border-radius: 12
      font-size: 26
      stroke-width: 2
      shadow: true
    }
  }
  reverted: {
    style: {
      fill: "#3b0a0e"
      stroke: "#f43f5e"
      font-color: "#ffe4e6"
      border-radius: 12
      font-size: 26
      stroke-width: 2
      shadow: true
    }
  }
}

edit: "Contributor edit\nadd  ·  delete  ·  modify polygon" {
  class: contributor
}

pending: "Correction queued\nstatus: pending  ·  audit trail preserved" {
  class: pending
}

review: "Auditor review\nall pending corrections visible on map" {
  class: auditor
}

decision: "Approve?" {
  class: decision
}

approved: "Approved ✓\nchange permanent  ·  tiles updated" {
  class: approved
}

reverted: "Reverted ✗\noriginal geometry restored" {
  class: reverted
}

edit -> pending: {
  style.stroke: "#f59e0b"
  style.stroke-width: 2
}
pending -> review: {
  style.stroke: "#38bdf8"
  style.stroke-width: 2
}
review -> decision: {
  style.stroke: "#a78bfa"
  style.stroke-width: 2
}
decision -> approved: "yes" {
  style.stroke: "#22c55e"
  style.font-color: "#22c55e"
  style.stroke-width: 2
}
decision -> reverted: "no" {
  style.stroke: "#f43f5e"
  style.font-color: "#f43f5e"
  style.stroke-width: 2
}
