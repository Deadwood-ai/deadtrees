direction: down

classes: {
  step: {
    style: {
      fill: "#1e293b"
      stroke: "#475569"
      font-color: "#f1f5f9"
      border-radius: 10
      font-size: 24
      stroke-width: 2
      shadow: true
    }
  }
  decision: {
    shape: diamond
    style: {
      fill: "#1e293b"
      stroke: "#64748b"
      font-color: "#f1f5f9"
      font-size: 22
      stroke-width: 2
      shadow: true
    }
  }
  approved: {
    style: {
      fill: "#052e16"
      stroke: "#22c55e"
      font-color: "#dcfce7"
      border-radius: 10
      font-size: 24
      stroke-width: 2
      shadow: true
    }
  }
  reverted: {
    style: {
      fill: "#1c0a09"
      stroke: "#ef4444"
      font-color: "#fee2e2"
      border-radius: 10
      font-size: 24
      stroke-width: 2
      shadow: true
    }
  }
}

edit: "Contributor edits prediction\nadd  ·  delete  ·  modify" {
  class: step
}

pending: "Correction saved\nstatus: pending  ·  audit trail preserved" {
  class: step
}

review: "Auditor reviews pending corrections" {
  class: step
}

decision: "Approve?" {
  class: decision
}

approved: "Approved ✓\nchange is permanent  ·  map tiles updated" {
  class: approved
}

reverted: "Reverted ✗\noriginal geometry restored" {
  class: reverted
}

edit -> pending: "save" {
  style.stroke: "#64748b"
  style.font-color: "#94a3b8"
}
pending -> review: "queue" {
  style.stroke: "#64748b"
  style.font-color: "#94a3b8"
}
review -> decision: {
  style.stroke: "#64748b"
}
decision -> approved: "yes" {
  style.stroke: "#22c55e"
  style.font-color: "#22c55e"
}
decision -> reverted: "no" {
  style.stroke: "#ef4444"
  style.font-color: "#ef4444"
}
